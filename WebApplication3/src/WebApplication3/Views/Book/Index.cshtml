@model IEnumerable<WebApplication3.Models.Book>
@using WebApplication3.Models;

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>
    
@{
    if (ViewData["Book"] != null)
    {
        foreach (Book b in (IEnumerable<Book>)ViewData["Book"])
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => b.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Year)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@b.BookID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@b.BookID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@b.BookID">Delete</a>
                </td>
            </tr>
            }
        }
        else {
            @Html.Raw("<p>WWWWWWWWWWWWWWWWWww</p>");
        }
    }
</table>
