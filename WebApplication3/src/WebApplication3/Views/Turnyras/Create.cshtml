@model WebApplication3.Models.TurnyroModeliai.Turnyras

@{
    ViewData["Title"] = "Create";
}
<ol class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Pradžia</a></li>
    <li><a asp-controller="Turnyras" asp-action="Index">Turnyrai</a></li>
    <li class="active">Naujo turnyro paskelbimas</li>
</ol>
<div class="well col-sm-6">
    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Naujo turnyro paskelbimas</h4>
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KomanduKiekis" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <select asp-for="KomanduKiekis" class="form-control">
                        <option value="2">2</option>
                        <option value="4">4</option>
                        <option value="8">8</option>
                        <option value="16">16</option>
                        <option value="32">32</option>
                    </select>
                    <span asp-validation-for="KomanduKiekis" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Pavadinimas" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Pavadinimas" class="form-control" />
                    <span asp-validation-for="Pavadinimas" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Paskelbti" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>
