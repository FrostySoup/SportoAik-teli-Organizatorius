@model WebApplication3.ViewModel.TurnyroViewModeliai.IndexViewModel

@{
    ViewData["Title"] = "Gatvės Sporto Organizatorius - Turnyrai";
}

<ol class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Pradžia</a></li>
    <li class="active">Turnyrai</li>
</ol>

<ul class="nav nav-tabs">
    <li @if (Model.Type == null) { @Html.Raw("class=\"active\"") } ><a asp-action="Index">Visi</a></li>
    <li @if (Model.Type == 0) { @Html.Raw("class=\"active\"") } ><a asp-action="Index" asp-route-type="0">Nauji</a></li>
    <li @if (Model.Type == 1) { @Html.Raw("class=\"active\"") }><a asp-action="Index" asp-route-type="1">Vykstantys</a></li>
    <li @if (Model.Type == 2) { @Html.Raw("class=\"active\"") }><a asp-action="Index" asp-route-type="2">Pasibaigę</a></li>
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            Paskelbti <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a asp-action="Create">Naują turnyrą</a></li>
        </ul>
    </li>
</ul>

<table class="table table-striped table-list">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Turnyrai.First().Pavadinimas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turnyrai.First().TurnyroSportoSaka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turnyrai.First().TurnyroAutorius)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turnyrai.First().KomanduKiekis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turnyrai.First().MinZaidejuKiekisKomandoje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turnyrai.First().TurnyroBusena)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Turnyrai)
        {
            <tr class="active-row" onclick="document.location = '@(Url.Action("Details", "Turnyras", new { id = item.TurnyrasID }))';">
                <td>
                    @Html.DisplayTextFor(modelItem => item.Pavadinimas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TurnyroSportoSaka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TurnyroAutorius.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KomanduKiekis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinZaidejuKiekisKomandoje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TurnyroBusena)
                </td>
            </tr>
        }
    </tbody>
</table>
