@model IEnumerable<WebApplication3.Models.TurnyroModeliai.Komanda>

@{
    ViewData["Title"] = "Pakvietimai";
}

<h2>Pakvietimai</h2>
<table class="table">
    <tr>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pavadinimas)
            </td>
            <td>
                <a asp-controller="Komanda" asp-action="Join" asp-route-id="@item.KomandaID" class="btn btn-info" role="button">Prisijungti</a>
            </td>
            <td>
                <a asp-controller="Komanda" asp-action="Ignore" asp-route-id="@item.KomandaID" class="btn btn-info" role="button">Ignoruoti</a>
            </td>
        </tr>
    }
</table>