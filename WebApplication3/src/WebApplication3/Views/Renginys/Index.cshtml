@model IEnumerable<WebApplication3.Models.AikstelesModeliai.Renginys>

@{
    ViewData["Title"] = "Renginiai";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Statusas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SportoSaka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZaidejuKiekis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            Aikstele
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Statusas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SportoSaka)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZaidejuKiekis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aikstele.Adresas) @Html.DisplayFor(modelItem => item.Aikstele.Miestas)
        </td>
        <td>
            <a asp-action="Details" asp-route-id="@item.RenginysID">Informacija</a>
        </td>
    </tr>
}
</table>
</body>
</html>
