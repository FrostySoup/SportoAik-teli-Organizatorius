@model IEnumerable<WebApplication3.Models.TurnyroModeliai.Komanda>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@{ if (ViewBag.KomandosId == 0)
    {
        <p>
            <a asp-action="Create">Sukurti komandà</a>
        </p>
    }
    else
    {
        <p>
            <a asp-action="TeamView">Tavo komandà</a>
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pavadinimas)
        </th>
        <th></th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pavadinimas)
        </td>
        <td>
            <a asp-action="Join" asp-route-id="@item.KomandaID" class="btn btn-info" role="button">Prisijungti</a>
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.KomandaID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.KomandaID">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.KomandaID">Delete</a>
        </td>
    </tr>
}
</table>
